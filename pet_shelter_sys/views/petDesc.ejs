<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='stylesheets/petDesc.css' />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
    
<body>
    <!-- NAVIGATION BAR -->
    <%- include('partials/nav.ejs', { activePage: 'home' }); %>
    
    <!-- MAIN CONTENT -->
    <main>
        <div class="container">
            <div class="column1">
                <h1>Hi! I'm <span class="name">Buddy</span></h1>
                <div class="row1_1">
                    
                    <hr>
                    <div class="container1">
                        <div class="info-section">
                            <div class="info-group">
                                <p><strong>Pet ID: </strong>00187</p>
                                <p><strong>Name: </strong>Buddy</p>
                                <p><strong>Species: </strong>Dog</p>
                                <p><strong>Breed: </strong>Aspin</p>
                                <p><strong>Age: </strong>Adult</p>
                                <p><strong>Sex: </strong>Male</p>
                                <p><strong>Size: </strong>Medium</p>
                            </div>

                            <div class="info-group">
                                <p><strong>Characteristics: </strong>Playful</p>
                                <p><strong>Health Status: </strong>Healthy</p>                            
                                <p><strong>Special Needs: </strong>None</p>
                                <p><strong>Birthday: </strong>January 1, 2024</p>
                                <p><strong>Location Rescued: </strong>Malabon City</p>
                            </div>
                        </div>
                    </div>
                </div>

                <hr>    
                <div class="row1_2">
                    <div class="container2">
                        <h2>I am...</h2>
                        <p>Your loyal great friend. Loves to cuddle and go for a walk.</p>
                    </div>
                </div>

                <hr>
                <div class="row1_3">
                    <div class="container3">
                        <button>Adopt Me</button>
                        <button>Ask about me?</button>
                    </div>
                </div>
            </div>

            <div class="column2">
                <div class="row2_1">
                    <div id="imageCarousel" class="carousel slide image_container" data-bs-ride="carousel">
                        <!-- Indicators/dots for the carousel -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
            
                        <!-- Carousel inner (slides) -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/petDesc/buddy8.png" class="d-block w-100" alt="Pet Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="images/petDesc/buddy4.png" class="d-block w-100" alt="Pet Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="images/petDesc/buddy5.png" class="d-block w-100" alt="Pet Image 3">
                            </div>
                        </div>
            
                        <!-- Controls (previous and next) -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>            
                </div>
            </div>        
        </div>
    </main>

    <!-- FOOTER -->
    <%- include('partials/foot.ejs'); %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>        
</html>
