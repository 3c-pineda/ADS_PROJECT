   <script>
    function logout() {
        // Remove the 'login_status' from sessionStorage
        sessionStorage.removeItem('login_status');
    
        // Redirect to the login page
        window.location.href = '/admin/login';
    }
   </script>
    <script>
        const btn = document.getElementById('minimizeLanding');
        let ifminimizeclick = true;
        btn.addEventListener('click', function() {
          if (ifminimizeclick) {
              document.getElementById("nav").style.width="0px";
              document.getElementById("restoreLanding").style.display="block";
              document.getElementById("minimizeLanding").style.display="none";
          }
        });
    
        const btn1 = document.getElementById('restoreLanding');
        let ifrestoreclick = true;
        btn1.addEventListener('click', function() {
          if (ifrestoreclick) {
              document.getElementById("nav").style.width="200px";
              document.getElementById("restoreLanding").style.display="none";
              document.getElementById("minimizeLanding").style.display="block";
          }	  
        });
    </script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get the current path (pathname) of the URL
        let currentPath = window.location.pathname;
        
        // Normalize paths to handle both `/admin` and `/admin/`
        if (currentPath === "/admin/") {
            currentPath = "/admin";
        }
        
        // Select all menu links
        const menuLinks = document.querySelectorAll("nav ul li a");
        
        // Loop through each link to add 'active' class to the matching URL
        menuLinks.forEach(link => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });
</script>
