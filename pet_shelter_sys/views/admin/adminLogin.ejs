<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title><%= title %></title>

    <style>
      :root {
        --white: #ffffff;
        --green: #20a98c;
        --dark-green: #18856d;
        --black: #2e2e2e;
        --gray: #f1f1f1;
      }

      body {
        background-color: var(--white);
        color: var(--black);
        font-family: Arial, sans-serif;
      }

      .form-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: var(--gray);
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .form-container .btn-primary {
        background-color: var(--green);
        border: none;
      }

      .form-container .btn-primary:hover {
        background-color: var(--dark-green);
      }

      .form-container a {
        color: var(--green);
      }

      .form-container a:hover {
        color: var(--dark-green);
      }

      .alert {
        display: none;
        margin-bottom: 15px;
      }
    </style>
  </head>
  <body>
    <div class="form-container">
      <h2 class="text-center mb-4">Login</h2>
      <!-- Success/Failure Alert -->
      <div id="alert" class="alert alert-success" role="alert"></div>

      <form action="/admin/login" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="janedoe" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="********" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
        <p class="text-center mt-3">
          <a href="#">Forgot your password?</a>
        </p>
      </form>
    </div>
    <!-- JavaScript to handle success/error popups and redirection -->
    <script>
      <% if (typeof message !== 'undefined' && message === 'Login successful') { %>
        // Show success message
        let alertDiv = document.getElementById('alert');
        alertDiv.classList.remove('alert-danger');
        alertDiv.classList.add('alert-success');
        alertDiv.textContent = 'Login successful';
        alertDiv.style.display = 'block';
        // Set session storage
        sessionStorage.setItem('login_status', 'success');
        // Redirect after 2 seconds
        setTimeout(function() {
          window.location.href = '/admin/';
        }, 2000);
      <% } else if (typeof error !== 'undefined') { %>
        // Show error message
        let alertDiv = document.getElementById('alert');
        alertDiv.classList.remove('alert-success');
        alertDiv.classList.add('alert-danger');
        alertDiv.textContent = 'Wrong username or password';
        alertDiv.style.display = 'block';
      <% } %>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
