<script>
    // JavaScript to set the active link based on the current URL
    document.addEventListener("DOMContentLoaded", function () {
        // Get the current path (pathname) of the URL
        const currentPath = window.location.pathname;
        
        // Select all menu links
        const menuLinks = document.querySelectorAll(".menu-items a, .special-btn");
        
        // Loop through each link to add 'active' class to the matching URL
        menuLinks.forEach(link => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });
</script>
